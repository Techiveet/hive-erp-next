// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"

}

// -----------------------------------------------------------------------------
// Better Auth - Core Models
// -----------------------------------------------------------------------------
model User {
  id               String   @id @default(cuid())
  name             String?
  email            String   @unique
  emailVerified    Boolean  @default(false)
  image            String?  // Profile image from Auth providers
  avatarUrl        String?  // Custom uploaded avatar used in your UI
  
  twoFactorEnabled Boolean  @default(false)
  isActive         Boolean  @default(true)

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  accounts         Account[]
  sessions         Session[]
  memberships      Membership[]
  userRoles        UserRole[]
  passwordTokens   PasswordSetupToken[]
  auditActorLogs   AuditLog[]           @relation("AuditActor")

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?   // Used for credentials provider
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// -----------------------------------------------------------------------------
// Multi-tenant Core
// -----------------------------------------------------------------------------
model Tenant {
  id        String       @id @default(cuid())
  name      String
  slug      String       @unique
  status    TenantStatus @default(ACTIVE)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  auditLogs        AuditLog[]
  memberships      Membership[]
  roles            Role[]
  domains          TenantDomain[]
  brandingSettings BrandingSettings?
  companySettings  CompanySettings?
  userRoles        UserRole[]

  @@map("tenant")
}

model TenantDomain {
  id        String     @id @default(cuid())
  tenantId  String
  domain    String     @unique
  type      DomainType @default(SUBDOMAIN)
  createdAt DateTime   @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@map("tenant_domain")
}

// -----------------------------------------------------------------------------
// RBAC (Central + Tenant)
// -----------------------------------------------------------------------------
model Role {
  id        String    @id @default(cuid())
  tenantId  String?   // null => CENTRAL role
  key       String
  name      String
  scope     RoleScope @default(CENTRAL)
  createdAt DateTime  @default(now())

  tenant          Tenant?          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  memberships     Membership[]
  userRoles       UserRole[]
  rolePermissions RolePermission[]

  @@unique([tenantId, key])
  @@unique([tenantId, name])
  @@index([tenantId])
  @@map("role")
}

model Permission {
  id   String @id @default(cuid())
  key  String @unique
  name String

  rolePermissions RolePermission[]

  @@map("permission")
}

model RolePermission {
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@map("role_permission")
}

model UserRole {
  id        String  @id @default(cuid())
  userId    String
  roleId    String
  tenantId  String?

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  role   Role    @relation(fields: [roleId], references: [id], onDelete: Cascade)
  tenant Tenant? @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId, tenantId])
  @@index([userId])
  @@index([roleId])
  @@index([tenantId])
  @@map("user_role")
}

model Membership {
  id        String           @id @default(cuid())
  tenantId  String
  userId    String
  roleId    String?
  status    MembershipStatus @default(ACTIVE)
  createdAt DateTime         @default(now())

  role   Role?  @relation(fields: [roleId], references: [id])
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@index([tenantId])
  @@index([userId])
  @@map("membership")
}

// -----------------------------------------------------------------------------
// Settings & Security
// -----------------------------------------------------------------------------
model PasswordSetupToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("password_setup_token")
}

model CompanySettings {
  id        String  @id @default(cuid())
  tenantId  String  @unique
  
  legalName String?
  taxId     String?
  address   String?
  phone     String?
  email     String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("company_settings")
}

model BrandingSettings {
  id           String  @id @default(cuid())
  tenantId     String  @unique

  titleText    String?
  logoLightUrl String?
  logoDarkUrl  String?
  faviconUrl   String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("branding_settings")
}

model AuditLog {
  id        String   @id @default(cuid())
  tenantId  String
  actorId   String?
  action    String
  entity    String
  entityId  String?
  meta      Json?
  createdAt DateTime @default(now())

  actor  User?  @relation("AuditActor", fields: [actorId], references: [id])
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, createdAt])
  @@index([actorId, createdAt])
  @@map("audit_log")
}

// -----------------------------------------------------------------------------
// Enums
// -----------------------------------------------------------------------------
enum TenantStatus {
  ACTIVE
  SUSPENDED
}

enum DomainType {
  SUBDOMAIN
  CUSTOM
}

enum MembershipStatus {
  ACTIVE
  INVITED
  DISABLED
}

enum RoleScope {
  CENTRAL
  TENANT
}